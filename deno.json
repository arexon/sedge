{
	"tasks": {
		"build": "cd playground && sedge build",
		"dev": "cd playground && sedge dev -t prototype",
		"clean": "cd playground && sedge clean",
		"lint": "deno lint --ignore=playground && deno fmt --ignore=playground",
		"fmt": "deno fmt --ignore=playground",
		"test": "deno test -A"
	},
	"fmt": {
		"options": {
			"indentWidth": 4,
			"useTabs": true,
			"singleQuote": true
		}
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		}
	},
	"importMap": "import_map.json"
}
