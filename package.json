{
	"name": "sedge-monorepo",
	"private": true,
	"scripts": {
		"build": "turbo run build --scope !playground*",
		"dev": "turbo run dev --scope !playground* --no-cache",
		"test": "vitest run",
		"lint": "denolint -c .denolint.json",
		"format": "prettier --write \"**/*.ts\" --ignore-path .gitignore",
		"release": "pnpm build && bumpp packages/*/package.json --commit --tag && pnpm -r publish --access public"
	},
	"devDependencies": {
		"@node-rs/deno-lint": "^1.14.0",
		"bumpp": "^8.2.1",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"turbo": "^1.4.2",
		"typescript": "^4.7.4",
		"vitest": "^0.21.0"
	},
	"engines": {
		"node": ">=v16.16.0"
	},
	"packageManager": "pnpm@7.9.0"
}
